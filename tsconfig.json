{
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "target": "es5",
    "lib": [
      "dom",
      "es2015",
      "esnext"
    ],
    "noEmitHelpers": false,
    "noImplicitAny": true,
    "allowJs": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "declarations",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./"
  },
  "include": [
    "src/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    ".keep",
    ".templates",
    "node_modules"
  ],
  "compileOnSave": false
}
